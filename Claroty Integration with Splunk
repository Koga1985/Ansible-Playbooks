---
- name: Configure Claroty to send logs to Splunk
  hosts: claroty_servers
  become: yes
  tasks:
    - name: Update Claroty log forwarding settings
      lineinfile:
        path: /etc/claroty/log_forwarding.conf
        line: "splunk_server=splunk.example.com:9997"
        create: yes

    - name: Restart Claroty service to apply changes
      service:
        name: claroty
        state: restarted
