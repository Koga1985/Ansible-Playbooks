---
- name: Retrieve VMware VM Information
  hosts: localhost
  gather_facts: no
  tasks:
    - name: Get information about a VM
      vmware_vm_vm_docker:
        hostname: "your_vcenter_server"
        username: "your_vcenter_user"
        password: "your_vcenter_password"
        validate_certs: no
        vm_id: "your_vm_id"
        state: "info"
      register: vm_info

    - name: Display VM information
      debug:
        var: vm_info
