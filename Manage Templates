---
- name: Clone VMware Template to New VM
  hosts: localhost
  gather_facts: no
  tasks:
    - name: Clone template to new VM
      vmware_vm_vm_docker:
        hostname: "your_vcenter_server"
        username: "your_vcenter_user"
        password: "your_vcenter_password"
        validate_certs: no
        cluster: "your_cluster"
        template: "your_template_name"
        name: "new_vm_name_from_template"
        datacenter: "your_datacenter"
        resource_pool: "your_resource_pool"
        state: "poweredon"
