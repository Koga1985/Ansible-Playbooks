---
- name: Create or Manage VMware Users and Roles
  hosts: localhost
  gather_facts: no
  tasks:
    - name: Create a VMware User
      vmware_user:
        hostname: "your_vcenter_server"
        username: "your_vcenter_admin_user"
        password: "your_vcenter_admin_password"
        validate_certs: no
        name: "new_user"
        password: "new_password"
        role: "Administrator"
        state: "present"
    
    - name: Assign a Role to a VMware User
      vmware_user_role:
        hostname: "your_vcenter_server"
        username: "your_vcenter_admin_user"
        password: "your_vcenter_admin_password"
        validate_certs: no
        name: "new_user"
        role: "Administrator"
        state: "present"
